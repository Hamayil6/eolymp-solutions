#include <stdio.h>

int main() {
    
    int len;
    scanf("%d", &len);
    int nums[len];
    
    for (int i = 0; i < len; i++) {
        scanf("%d", &nums[i]);
    }
    
    int count = 0;
    int target = nums[0];
    for (int i = 0; i < len - 1; i++) {
        int min_pos = i;
        for (int j = i + 1; j < len; j++) {
            if (nums[j] < nums[min_pos]) min_pos = j;
        }
        if (min_pos != i) {
            if (nums[i] == target || nums[min_pos] == target) count++;
            int temp = nums[i];
            nums[i] = nums[min_pos];
            nums[min_pos] = temp;
        }
    }
    printf("%d\n", count);
    
    return 0;
}
