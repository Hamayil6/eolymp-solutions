#include <stdio.h>
#include <string.h>
int main() {
    char s[251]; 
    gets(s); 
    int n = strlen(s);
    int k = 0;
    for (int i = 1; i < n; ++i) {        
        if ((s[i] == '!' || s[i] == '?' || s[i] == '.') && !(s[i - 1] == '!' || s[i - 1] == '?' || s[i - 1] == '.')) {
            k++;
        }
    }
    printf("%d\n", k);
    return 0;}
